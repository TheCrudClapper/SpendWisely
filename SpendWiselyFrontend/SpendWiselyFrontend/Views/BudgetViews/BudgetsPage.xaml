<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpendWiselyFrontend.Views.BudgetViews.BudgetsView"
             xmlns:vm="clr-namespace:SpendWiselyFrontend.ViewModels.BudgetViewModels"
             BackgroundColor="{StaticResource DarkColor}"
             >
    
    <ContentPage.BindingContext>
        <vm:BudgetsViewModel/>
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <StackLayout Margin="5,9" Spacing="10">
            <Button HeightRequest="40" WidthRequest="40" HorizontalOptions="EndAndExpand" Text="➕" Margin="0,5,5,0" Command="{Binding OpenAddBudgetPageCommand}"/>
            <Label Text="Budgets" FontAttributes="Bold" FontSize="25" Margin="0,5,0,0"/>
            <CollectionView ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="10"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Orientation="Horizontal"  Margin="5,5">
                            <Label Text="{Binding EmojiUrl}" FontSize="40" VerticalOptions="Center"/>
                            <StackLayout Margin="10,0">
                                <Label Text="{Binding Name}" FontSize="Small" VerticalOptions="Center"/>
                                <Label Text="{Binding Balance}" FontSize="Small" VerticalOptions="Center"/>
                            </StackLayout>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>